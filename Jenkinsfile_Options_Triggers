pipeline{
    agent any
    options {
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '3'))
        //disableConcurrentBuilds(abortPrevious: true)
        //retry(2)
        //timeout(time: 1, unit: 'HOURS')
        timestamps()
    }
    triggers{
        cron('5 * * * *')
        pollSCM('H */4 * * 1-5')
    }
    stages{
        stage('First Stage'){
            steps{
                sh 'sleep 5'
            }
        }
    }
}