pipeline{
    agent any
    stages{
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                branches: [[name: "${GIT_BRANCH}"]],
                userRemoteConfigs: [[credentialsId: "${GIT_CREDENTIALS}", 
                url: "${GIT_URL}"]]])
            }
        }
        stage('First Stage'){
            when{
                branch 'main'
            }
            steps{
                sh 'sleep 5'
                echo "This is executing main branch"
            }
        }
        stage('Second Stage'){
            when{
                branch 'master'
            }
            steps{
                sh 'sleep 5'
                echo "This is executing master branch"
            }
        }
    }
}