pipeline {
    agent any
    stages {
        stage('STAGE1') {
            steps {
               echo "This is STAGE 1"
               sh 'sleep 4'
            }
        }
        stage('STAGE2') {
            steps {
               echo "This is STAGE 2"
               sh 'sleep 5'
            }
        }
    }
    post {
        always {
            echo "The build is Success / Failure / Unstable"
        }
        failure{
            echo "This build is Failed"
        }
    }
}